{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["react", "react-native"],
  "rules": {
    "class-methods-use-this": 0,
    "semi": ["error", "never"],
    "import/no-unresolved": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": [1, "never", {
      "js": "never",
      "json": "always"
    }],
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "no-debugger": "off",
    "global-require": "off",
    "max-len": [2, 120]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "env": {
    "jest": true
  }
}